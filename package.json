{
  "name": "call-logger",
  "private": true,
  "version": "0.6.1",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "preview": "vite preview --mode development",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write --plugin-search-dir=. ./src/**/*.svelte ./src/**/*.ts",
    "emulator:start": "firebase emulators:start",
    "test": "firebase emulators:exec \"vitest\"",
    "firebase": "firebase",
    "test:cov": "firebase emulators:exec \"vitest run --coverage\"",
    "lint": "eslint ./src/**/*.svelte ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/**/*.svelte ./src/**/*.ts",
    "deploy:dev": "npm run lint && npm run test && npm run build:dev && firebase deploy --project dev",
    "deploy:prod": "npm run lint && npm run test && npm run build:prod && firebase deploy --project prod",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@firebase/rules-unit-testing": "^2.0.5",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/addon-svelte-csf": "^2.0.10",
    "@storybook/builder-vite": "^0.1.37",
    "@storybook/svelte": "^6.1.21",
    "@storybook/testing-library": "^0.0.13",
    "@sveltejs/vite-plugin-svelte": "^1.0.9",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@vitest/coverage-c8": "^0.25.2",
    "babel-loader": "^8.2.5",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "firebase-tools": "^11.16.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.0",
    "sass": "^1.56.0",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-fa": "^3.0.3",
    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vitest": "^0.25.2"
  },
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "bulma": "^0.9.4",
    "firebase": "^9.14.0",
    "rxfire": "^6.0.3",
    "rxjs": "^7.5.7",
    "unique-names-generator": "^4.7.1"
  }
}
